<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kimhao.first_project">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.DIAL" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="tel" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ListUserActivity"
            android:label="@string/title_activity_recycler_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ActivityLogin"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.AddEditActivity"
            android:label="@string/title_activity_data__transfer__recycler_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.PhoneCallActivity"
            android:label="@string/title_activity_phone__call"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MentorTaiActivity"
            android:label="@string/title_activity_mentor__tai"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Song.SongActivity"
            android:label="@string/title_activity_song"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".Song.MusicService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".SharedPreferences.SharedPreferencesActitvity"
            android:label="@string/title_activity_shared_preferences"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Storage.StorageActivity"
            android:label="@string/title_activity_storage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.AfterLoginActivity"
            android:label="@string/title_activity_after_login"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>