<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/content_data__transfer__recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgAvatar"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_person"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgAvatar"
            android:layout_toEndOf="@+id/imgAvatar"
            android:id="@+id/edtName"
            android:hint="@string/string_edit_hint_name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:id="@+id/edtAge"
            android:layout_toEndOf="@+id/imgAvatar"
            android:hint="@string/string_edit_hint_age"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgAvatar"
            android:layout_below="@+id/edtAge"
            android:id="@+id/edtAddr"
            android:layout_toEndOf="@+id/imgAvatar"
            android:hint="@string/string_edit_hint_address"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddEdit"
            android:layout_below="@+id/edtAddr"
            android:text="@string/string_button_add"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDelete"
            android:layout_below="@+id/edtAddr"
            android:text="@string/string_button_delete"
            android:layout_toEndOf="@+id/btnAddEdit"
            />
    </RelativeLayout>
</LinearLayout>