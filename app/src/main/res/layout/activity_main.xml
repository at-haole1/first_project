<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="vertical">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:text="Login"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecyclerview"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnLogin"
            android:text="RecyclerView"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnPhoneCall"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnRecyclerview"
            android:text="Phone Call"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMentorTai"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnPhoneCall"
            android:text="Mentor_Tai"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSharedPreferences"
            android:layout_below="@+id/btnMentorTai"
            android:text="SharedPreferences"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnStorage"
            android:layout_below="@+id/btnSharedPreferences"
            android:text="Storage"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFragment"
            android:layout_below="@+id/btnStorage"
            android:text="Fragment"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnService"
            android:layout_below="@+id/btnFragment"
            android:text="Service"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnReceiver"
            android:layout_below="@+id/btnService"
            android:text="Receiver"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAlarm"
            android:layout_below="@+id/btnReceiver"
            android:text="Alarm"/>

    </RelativeLayout>
</LinearLayout>