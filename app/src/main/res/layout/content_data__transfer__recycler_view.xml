<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_data__transfer__recycler_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kimhao.first_project.RecyclerViewActivity2"
    tools:showIn="@layout/activity_data__transfer__recycler_view">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgAvaAdd"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_person"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgAvaAdd"
        android:layout_toEndOf="@+id/imgAvaAdd"
        android:id="@+id/edtNameAdd"
        android:hint="Name"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNameAdd"
        android:id="@+id/edtAgeAdd"
        android:layout_toEndOf="@+id/imgAvaAdd"
        android:hint="Age"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgAvaAdd"
        android:layout_below="@+id/edtAgeAdd"
        android:id="@+id/edtAddrAdd"
        android:layout_toEndOf="@+id/imgAvaAdd"
        android:hint="Address"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveAdd"
        android:layout_below="@+id/edtAddrAdd"
        android:text="Save"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        android:layout_below="@+id/edtAddrAdd"
        android:text="Edit"
        android:layout_toEndOf="@+id/btnSaveAdd"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:layout_below="@+id/edtAddrAdd"
        android:text="Delete"
        android:layout_toEndOf="@+id/btnEdit"
        />




</RelativeLayout>
