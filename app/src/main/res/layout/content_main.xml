<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kimhao.first_project.MainActivity"
    tools:showIn="@layout/activity_main"
    android:scrollbars="vertical">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:text="Login"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRecyclerview"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLogin"
        android:text="RecyclerView"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPhoneCall"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnRecyclerview"
        android:text="Phone Call"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMMentorTai"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnPhoneCall"
        android:text="Mentor_Tai"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSQLDB"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnMMentorTai"
        android:text="SQLite Database"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnService"
        android:layout_below="@+id/btnSQLDB"
        android:text="service"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSharedPreferences"
        android:layout_below="@+id/btnService"
        android:text="SharedPreferences"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStorage"
        android:layout_below="@+id/btnSharedPreferences"
        android:text="Storage"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnFragment"
        android:layout_below="@+id/btnStorage"
        android:text="Fragment"/>

</RelativeLayout>
